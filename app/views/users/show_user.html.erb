<div class="container message">
  <h3>Welcome to Songify's profile</h3>
  <p>show your informations <%= @user.username%></p>
  <br/>
</div>

<div class="container">
    <div class="card cardpr">
        <div class="row stylerow" style="border-bottom: 1px solid #E5E5E5;">
            <div class="col-sm-2 col-md-2" style="margin-left: 4%;">
                <% if @user.provider == "twitter" %>
                <img style="width: 100%; height: 65%; margin-top: 20%;" src="<%= @user.profile_image_url %>" alt="No Image" class="img-raised rounded-circle img-fluid">
                <%else%>
                <img style="width: 100%; height: 65%; margin-top: 20%;" src="<%= @user.avatar.url %>" alt="No Image" class="img-raised rounded-circle img-fluid">
                <%end%>
                <br/>
            </div>
            <div class="col-sm-4 col-md-4">
                <blockquote>
                    <p><%= @user.first_name%></p> <small><cite> <%= @user.location%>, Italy <i class="glyphicon glyphicon-map-marker"></i></cite></small>
                </blockquote>
                <p> Email: <%= @user.email %>
                    <br/> Username: <%= @user.username %>
                    <br/> Date of birth: <%= @user.date_of_birth %>
                    <br/> User id:<% if @user.provider != "twitter" %> <%= @user.id %> <%else%> <%=@user.uid%><%end%>
                    <br/> Gender: <%= @user.gender %>
                    <br/> Bio: <%=current_user.bio %>

                    <%if current_user.id == @user.username %>
                    <%= link_to "Edit your account", edit_user_registration_path %>
                    <%end%>
                </p>
            </div>
        </div>
        <div style="margin-left: 4%; margin-bottom: 1%; margin-top: -2%">
          <h4>Favorite music events:</h4>
          <p>
            <% @user.favorites.each do |favorite| %>
            [<%= favorite.created_at.strftime("%I:%M %p")%>] You favorited this post:
              <%= link_to favorite.music_event.title, favorite.music_event %>
            <br>
            <% end %>
          </p>
        </div>
    </div>
</div>
